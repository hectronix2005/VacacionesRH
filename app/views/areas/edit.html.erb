<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-4">
          <li>
            <%= link_to "Dashboard", dashboard_path,
                        class: "text-gray-400 hover:text-gray-500" %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <%= link_to "Gestión de Áreas", areas_path,
                          class: "ml-4 text-gray-400 hover:text-gray-500" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <%= link_to @area.name, @area,
                          class: "ml-4 text-gray-400 hover:text-gray-500" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="ml-4 text-sm font-medium text-gray-500">Editar</span>
            </div>
          </li>
        </ol>
      </nav>

      <div class="mt-4">
        <h1 class="text-3xl font-bold text-gray-900">Editar Área</h1>
        <p class="mt-1 text-sm text-gray-600">
          Modifica la información del área "<%= @area.name %>"
        </p>
      </div>
    </div>

    <!-- Form -->
    <div class="bg-white shadow-sm rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <%= form_with model: @area, local: true do |form| %>
          <div class="space-y-6">
            <!-- Area Name -->
            <div>
              <%= form.label :name, "Nombre del Área *", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :name,
                                   placeholder: "Ej: Tecnología, Recursos Humanos, Ventas, Marketing",
                                   class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm #{'border-red-300' if @area.errors[:name].any?}",
                                   required: true %>
              </div>
              <% if @area.errors[:name].any? %>
                <p class="mt-2 text-sm text-red-600">
                  <%= @area.errors[:name].first %>
                </p>
              <% else %>
                <p class="mt-2 text-sm text-gray-500">
                  Modifica el nombre del área o departamento. Este cambio se reflejará en todos los usuarios asignados.
                </p>
              <% end %>
            </div>

            <!-- Current Status -->
            <div class="bg-gray-50 border border-gray-200 rounded-md p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-gray-800">
                    Estado actual del área
                  </h3>
                  <div class="mt-2 text-sm text-gray-600">
                    <ul class="space-y-1">
                      <li><strong>Empleados asignados:</strong> <%= @area.users_count %></li>
                      <li><strong>Empleados activos:</strong> <%= @area.active_users_count %></li>
                      <li><strong>Creada:</strong> <%= @area.created_at.strftime("%d/%m/%Y a las %H:%M") %></li>
                      <% if @area.updated_at != @area.created_at %>
                        <li><strong>Última actualización:</strong> <%= @area.updated_at.strftime("%d/%m/%Y a las %H:%M") %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>

            <!-- Warning if has users -->
            <% if @area.users.any? %>
              <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h3 class="text-sm font-medium text-yellow-800">
                      Ten cuidado al modificar el nombre
                    </h3>
                    <div class="mt-2 text-sm text-yellow-700">
                      <p>Esta área tiene <strong><%= @area.users_count %></strong> empleado<%= @area.users_count == 1 ? '' : 's' %> asignado<%= @area.users_count == 1 ? '' : 's' %>. Cambiar el nombre afectará los reportes y filtros existentes.</p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Form Actions -->
          <div class="mt-8 flex justify-end space-x-3">
            <%= link_to "Cancelar", @area,
                        class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= form.submit "Actualizar Área",
                           class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
