<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-4">
          <li>
            <%= link_to "Dashboard", dashboard_path,
                        class: "text-gray-400 hover:text-gray-500" %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <%= link_to "Gestión de Áreas", areas_path,
                          class: "ml-4 text-gray-400 hover:text-gray-500" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="ml-4 text-sm font-medium text-gray-500"><%= @area.name %></span>
            </div>
          </li>
        </ol>
      </nav>

      <div class="mt-4 md:flex md:items-center md:justify-between">
        <div class="flex-1 min-w-0">
          <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
            <%= @area.name %>
          </h2>
          <p class="mt-1 text-sm text-gray-600">
            Información detallada del área y sus empleados asignados
          </p>
        </div>
        <div class="mt-4 flex md:mt-0 md:ml-4 space-x-3">
          <%= link_to "Editar", edit_area_path(@area),
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <% unless @area.users.any? %>
            <%= link_to "Eliminar", @area, method: :delete,
                        confirm: "¿Estás seguro de que quieres eliminar el área '#{@area.name}'?",
                        class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
          <% end %>
          <%= link_to "← Volver", areas_path,
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Información del Área -->
      <div class="lg:col-span-1 space-y-6">
        <!-- Información General -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
              Información General
            </h3>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Nombre del Área</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                    <%= @area.name %>
                  </span>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Fecha de Creación</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @area.created_at.strftime("%d de %B de %Y") %></dd>
              </div>
              <% if @area.updated_at != @area.created_at %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Última Actualización</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @area.updated_at.strftime("%d de %B de %Y") %></dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <!-- Estadísticas -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
              Estadísticas
            </h3>
            <div class="space-y-4">
              <div class="bg-blue-50 p-4 rounded-lg">
                <dt class="text-sm font-medium text-gray-500">Total Empleados</dt>
                <dd class="text-3xl font-bold text-blue-600"><%= @users_count %></dd>
                <p class="text-xs text-gray-500 mt-1">empleados asignados</p>
              </div>
              <div class="bg-green-50 p-4 rounded-lg">
                <dt class="text-sm font-medium text-gray-500">Empleados Activos</dt>
                <dd class="text-3xl font-bold text-green-600"><%= @active_users_count %></dd>
                <p class="text-xs text-gray-500 mt-1">actualmente trabajando</p>
              </div>
              <% if @users_count > 0 %>
                <div class="bg-gray-50 p-4 rounded-lg">
                  <dt class="text-sm font-medium text-gray-500">Porcentaje Activos</dt>
                  <dd class="text-3xl font-bold text-gray-600">
                    <%= (@active_users_count.to_f / @users_count * 100).round(1) %>%
                  </dd>
                  <p class="text-xs text-gray-500 mt-1">del total de empleados</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Acciones Rápidas -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
              Acciones Rápidas
            </h3>
            <div class="space-y-3">
              <%= link_to "Ver Empleados por Área",
                         users_path(area: @area.name),
                         class: "w-full flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
              <%= link_to "Crear Nuevo Usuario",
                         new_user_path,
                         class: "w-full flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Lista de Empleados -->
      <div class="lg:col-span-2">
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg leading-6 font-medium text-gray-900">
                Empleados Asignados
                <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  <%= @users.count %>
                </span>
              </h3>
            </div>

            <% if @users.any? %>
              <div class="overflow-scroll shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
                <table class="min-w-full divide-y divide-gray-300">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Empleado</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">País</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Roles</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% @users.each do |user| %>
                      <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                          <div class="flex items-center">
                            <div class="flex-shrink-0 h-8 w-8">
                              <div class="h-8 w-8 rounded-full bg-gray-300 flex items-center justify-center">
                                <span class="text-xs font-medium text-gray-700">
                                  <%= user.initials %>
                                </span>
                              </div>
                            </div>
                            <div class="ml-3">
                              <div class="text-sm font-medium text-gray-900">
                                <%= user.name %>
                              </div>
                              <div class="text-sm text-gray-500">
                                <%= user.phone %>
                              </div>
                            </div>
                          </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <div class="text-sm text-gray-900">
                            <a href="mailto:<%= user.email %>" class="text-indigo-600 hover:text-indigo-900">
                              <%= user.email %>
                            </a>
                          </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            <%= user.country.name %>
                          </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <%= render 'users/role_badges', user: user %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <% if user.active? %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                              Activo
                            </span>
                          <% else %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                              Inactivo
                            </span>
                          <% end %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                          <%= link_to "Ver", user, class: "text-indigo-600 hover:text-indigo-900" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <!-- Empty State -->
              <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No hay empleados asignados</h3>
                <p class="mt-1 text-sm text-gray-500">
                  Esta área aún no tiene empleados asignados. Los empleados aparecerán aquí cuando se les asigne esta área.
                </p>
                <div class="mt-6">
                  <%= link_to "Crear Nuevo Empleado", new_user_path,
                              class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
