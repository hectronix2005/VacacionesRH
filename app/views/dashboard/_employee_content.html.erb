<!-- Employee Dashboard Content -->
<!-- Contenido específico para usuarios con rol Employee -->

<!-- Información Personal de Vacaciones -->
<div class="bg-white overflow-hidden shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
      Mis <%= current_user.vacation_term || 'Vacaciones' %>
    </h3>
    
    <!-- Progress Bar de Uso de Vacaciones -->
    <div class="mb-6">
      <div class="flex justify-between text-sm text-gray-600 mb-2">
        <span>Uso</span>
        <span><%= dashboard_data&.dig(:usage_percentage) || 0 %>%</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-3">
        <% usage_percentage = dashboard_data&.dig(:usage_percentage) || 0 %>
        <% bar_color = usage_percentage > 80 ? 'bg-red-400' : usage_percentage > 60 ? 'bg-yellow-400' : 'bg-green-400' %>
        <div class="<%= bar_color %> h-3 rounded-full transition-all duration-300" 
             style="width: <%= [usage_percentage, 100].min %>%"></div>
      </div>
    </div>

    <!-- Estadísticas Detalladas -->
    <div class="grid grid-cols-2 gap-4">
      <div class="text-center p-4 bg-blue-50 rounded-lg">
        <div class="text-2xl font-bold text-blue-900">
          <%= dashboard_data&.dig(:days_scheduled) || 0 %>
        </div>
        <div class="text-sm text-blue-600">Días Asignados</div>
      </div>
      
      <div class="text-center p-4 bg-green-50 rounded-lg">
        <div class="text-2xl font-bold text-green-900">
          <%= dashboard_data&.dig(:days_available) || 0 %>
        </div>
        <div class="text-sm text-green-600">Días Disponibles</div>
      </div>
      
      <div class="text-center p-4 bg-purple-50 rounded-lg">
        <div class="text-2xl font-bold text-purple-900">
          <%= dashboard_data&.dig(:used_days) || 0 %>
        </div>
        <div class="text-sm text-purple-600">Días Usados</div>
      </div>
      
      <div class="text-center p-4 bg-orange-50 rounded-lg">
        <div class="text-2xl font-bold text-orange-900">
          <%= dashboard_data&.dig(:pending_requests) || 0 %>
        </div>
        <div class="text-sm text-orange-600">Pendientes</div>
      </div>
    </div>

    <!-- Acciones Rápidas para Empleados -->
    <div class="mt-6 flex flex-wrap gap-2">
      <% if (dashboard_data&.dig(:days_available) || 0) > 0 %>
        <%= link_to "Solicitar #{current_user.vacation_term || 'Vacaciones'}", new_vacation_request_path,
                    class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      <% else %>
        <div class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-400 bg-gray-100 cursor-not-allowed">
          Sin días disponibles
        </div>
      <% end %>
      
      <%= link_to "Ver Historial", history_vacation_requests_path,
                  class: "inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    </div>
  </div>
</div>

<!-- Estado y Planificación -->
<div class="bg-white overflow-hidden shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
      Planificación Personal
    </h3>
    
    <!-- Recomendaciones basadas en el balance -->
    <% available_days = dashboard_data&.dig(:days_available) || 0 %>
    <% usage_percentage = dashboard_data&.dig(:usage_percentage) || 0 %>
    
    <% if available_days > 10 %>
      <div class="mb-4 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
        <div class="flex items-center">
          <svg class="h-5 w-5 text-yellow-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          <div class="flex-1">
            <h4 class="text-sm font-medium text-yellow-800">¡Es hora de descansar!</h4>
            <p class="text-sm text-yellow-700">
              Tienes <%= available_days %> días acumulados. Considera planificar tus próximas vacaciones.
            </p>
          </div>
        </div>
      </div>
    <% elsif usage_percentage == 0 && Date.current.month > 6 %>
      <div class="mb-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <div class="flex items-center">
          <svg class="h-5 w-5 text-blue-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div class="flex-1">
            <h4 class="text-sm font-medium text-blue-800">Planifica tu año</h4>
            <p class="text-sm text-blue-700">
              Aún no has usado días este año. ¡Planifica tu descanso para mantener un buen balance!
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Información de Contacto -->
    <div class="space-y-3">
      <div class="flex items-center justify-between">
        <span class="text-sm font-medium text-gray-500">Mi Líder</span>
        <span class="text-sm text-gray-900">
          <% if current_user.lead %>
            <%= current_user.lead.name %>
          <% else %>
            <span class="text-gray-400">Sin asignar</span>
          <% end %>
        </span>
      </div>
      
      <div class="flex items-center justify-between">
        <span class="text-sm font-medium text-gray-500">País</span>
        <span class="text-sm text-gray-900">
          <%= current_user.country_name %>
        </span>
      </div>

      <div class="flex items-center justify-between">
        <span class="text-sm font-medium text-gray-500">Tipo de Descanso</span>
        <span class="text-sm text-gray-900">
          <%= current_user.vacation_term || 'Vacaciones' %>
        </span>
      </div>
    </div>

    <!-- Consejos y Recordatorios -->
    <div class="mt-6 pt-6 border-t border-gray-200">
      <h4 class="text-sm font-medium text-gray-900 mb-3">Recordatorios</h4>
      <div class="space-y-2 text-sm text-gray-600">
        <div class="flex items-start">
          <svg class="h-4 w-4 mt-0.5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Las solicitudes deben hacerse con anticipación
        </div>
        
        <div class="flex items-start">
          <svg class="h-4 w-4 mt-0.5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Coordina con tu equipo antes de planificar
        </div>
      </div>
    </div>
  </div>
</div>