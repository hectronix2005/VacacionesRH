<div class="min-h-full flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-full space-y-8">
    <div>
      <div class="mx-auto h-12 w-12 text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-blue-500 text-white rounded-lg">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0H8m8 0v2a2 2 0 01-2 2H10a2 2 0 01-2-2V6"></path>
          </svg>
        </div>
      </div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Sistema de Gestión de Vacaciones
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Inicia sesión con tu número de documento
      </p>
    </div>

    <%= form_with(scope: :session, url: login_sessions_path, local: true, class: "mt-8 space-y-6") do |form| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= form.label :document_number, "Número de documento", class: "sr-only" %>
          <%= form.text_field :document_number, 
                              placeholder: "Número de documento", 
                              required: true,
                              class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" %>
        </div>
        <div>
          <%= form.label :password, "Contraseña", class: "sr-only" %>
          <%= form.password_field :password, 
                                  placeholder: "Contraseña", 
                                  required: true,
                                  class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>

      <% if flash[:alert] %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative" role="alert">
          <span class="block sm:inline"><%= flash[:alert] %></span>
        </div>
      <% end %>

      <div>
        <%= form.submit "Iniciar Sesión", 
                        class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>

    <div class="text-center">
      <p class="text-xs text-gray-500">
        ¿Problemas para acceder? Contacta a Recursos Humanos
      </p>
    </div>
  </div>
</div>
