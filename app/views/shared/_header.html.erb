<div class="mb-8">
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <div class="h-12 w-12 bg-blue-600 rounded-full flex items-center justify-center">
            <span class="text-lg font-bold text-white">
              <%= current_user.initials %>
            </span>
      </div>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">
          ¡Hola, <%= current_user.name %>!
        </h1>
        <div class="flex items-center space-x-2 mt-1">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= render 'users/role_badges', user: current_user %>
              </span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
            <%= current_user.country_name %>
          </span>
        </div>
      </div>
    </div>
    <div class="flex space-x-3">
      <% if request.path != root_path %>
        <%= link_to "Dashboard", root_path,
                    class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <% end %>
      <%= link_to "Mi Perfil", current_user, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <% mssg = "¿Estás seguro de que deseas cerrar sesión?" %>
      <%= link_to "Cerrar Sesión", logout_sessions_path, data: { method: :delete, confirm: mssg, turbo_method: :delete, turbo_confirm: mssg },
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
    </div>
  </div>
</div>