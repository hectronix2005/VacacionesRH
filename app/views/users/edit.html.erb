<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            Editar Usuario
          </h1>
          <p class="mt-1 text-sm text-gray-600">
            Actualizar información de <%= @user.name %>
          </p>
        </div>
        <div class="flex space-x-3">
          <% if current_user.hr? %>
            <%= link_to "Gestionar Balance", vacation_balances_path(user_id: @user.id),
                        class: "inline-flex items-center px-4 py-2 border border-teal-300 text-sm font-medium rounded-md text-teal-700 bg-white hover:bg-teal-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500" %>
          <% end %>
          <%= link_to "Ver Usuario", @user,
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= link_to "← Volver", users_path,
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    </div>

    <!-- Balance de Vacaciones/Días de Descanso -->
    <% if @user.current_year_balance %>
      <div class="mt-6 mb-6 bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">
            Balance Actual de <%= @user.vacation_term.capitalize %>
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-blue-50 p-4 rounded-lg">
              <dt class="text-sm font-medium text-gray-500">Total Asignados</dt>
              <dd class="text-2xl font-bold text-blue-600"><%= @user.current_year_balance.days_available %> días</dd>
            </div>
            <div class="bg-red-50 p-4 rounded-lg">
              <dt class="text-sm font-medium text-gray-500">Días Usados</dt>
              <dd class="text-2xl font-bold text-red-600"><%= @user.current_year_balance.used_days %> días</dd>
            </div>
            <div class="bg-green-50 p-4 rounded-lg">
              <dt class="text-sm font-medium text-gray-500">Días Disponibles</dt>
              <dd class="text-2xl font-bold text-green-600"><%= @user.available_days_for_year %> días</dd>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Form -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <%= form_with model: @user, local: true, class: "space-y-6" do |form| %>
          <%= render 'shared/form_errors', object: @user %>

          <!-- Estado del Usuario -->
          <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-lg font-medium text-gray-900">Estado del Usuario</h3>
                <p class="text-sm text-gray-600">
                  Usuario creado el <%= @user.created_at.strftime("%d/%m/%Y") %>
                </p>
              </div>
              <div class="flex items-center space-x-2">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= @user.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= @user.active? ? 'Activo' : 'Inactivo' %>
                </span>
                <% if @user.active? %>
                  <%= link_to "Desactivar", deactivate_user_path(@user), method: :patch,
                             data: { confirm: "¿Estás seguro de desactivar este usuario?" },
                             class: "text-sm text-red-600 hover:text-red-800" %>
                <% else %>
                  <%= link_to "Activar", activate_user_path(@user), method: :patch,
                             class: "text-sm text-green-600 hover:text-green-800" %>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Información Personal y Laboral (Partial) -->
          <%= render 'users/personal_and_job_fields', form: form, countries: @countries, leaders: @leaders, user: @user %>

          <!-- Cambio de Contraseña -->
          <div class="space-y-4">
            <h3 class="text-lg font-medium text-gray-900 border-b border-gray-200 pb-2">
              Cambiar Contraseña (Opcional)
            </h3>

            <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-yellow-800">
                    Deja estos campos vacíos si no deseas cambiar la contraseña del usuario.
                  </p>
                </div>
              </div>
            </div>

              <%= yield :password_fields %>
          </div>

          <!-- Actions -->
          <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
            <%= link_to "Cancelar", @user,
                        class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <%= form.submit "Actualizar Usuario",
                           class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
