<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-4">
          <li>
            <%= link_to "Dashboard", root_path,
                        class: "text-gray-400 hover:text-gray-500" %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <%= link_to "Usuarios", users_path,
                          class: "ml-4 text-gray-400 hover:text-gray-500" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="ml-4 text-sm font-medium text-gray-500"><%= @user.name %></span>
            </div>
          </li>
        </ol>
      </nav>

      <div class="mt-4 flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="h-16 w-16 bg-blue-600 rounded-full flex items-center justify-center">
            <%= render 'users/avatar', user: @user, size: 16 %>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-gray-900">
              <%= @user.name %>
            </h1>
            <div class="flex items-center space-x-2 mt-1">
              <%= render 'users/status_badge', user: @user %>
              <%= render 'users/role_badges', user: @user %>
              <% if @user.country&.name == 'México' %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
                  <%= t('users.vacation.rest_days') %>
                </span>
              <% else %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                  <%= t('users.vacation.vacations') %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
        <div class="flex space-x-3">
          <% if @user.active? %>
            <%= link_to "Desactivar", deactivate_user_path(@user), method: :patch,
                       data: { confirm: "¿Estás seguro de desactivar este usuario?" },
                       class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
          <% else %>
            <%= link_to "Activar", activate_user_path(@user), method: :patch,
                       class: "inline-flex items-center px-4 py-2 border border-green-300 text-sm font-medium rounded-md text-green-700 bg-white hover:bg-green-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
          <% end %>
          <%= link_to "Editar", edit_user_path(@user),
                     class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= link_to "← Volver", users_path,
                     class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Columna Principal -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Información Personal -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
              Información Personal
            </h3>
            <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500">Documento de Identidad</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @user.document_number %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Correo Electrónico</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <a href="mailto:<%= @user.email %>" class="text-blue-600 hover:text-blue-800">
                    <%= @user.email %>
                  </a>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Teléfono</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @user.phone %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Área/Departamento</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                    <%= @user.area&.name %>
                  </span>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">País</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @user.country&.name %>
                  <% if @user.country&.name == 'México' %>
                    <span class="text-xs text-orange-600">(Prestación de Servicios)</span>
                  <% end %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Fecha de Ingreso</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @user.created_at.strftime("%d de %B de %Y") %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('users.show.roles') %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= role_badges_for(@user) %></dd>
              </div>
              <% if @user.lead %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Líder Directo</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= link_to @user.lead.name, @user.lead, class: "text-blue-600 hover:text-blue-800" %>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <!-- Días Laborales -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
              Días Laborales
            </h3>

            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center space-x-2">
                <span class="text-sm font-medium text-gray-900">
                  <%= @user.has_custom_working_days? ? 'Configuración personalizada' : 'Heredado del país' %>
                </span>
                <% if @user.has_custom_working_days? %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    Personalizado
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Por defecto (<%= @user.country&.name %>)
                  </span>
                <% end %>
              </div>
              <div class="text-sm text-gray-500">
                <%= @user.working_days_in_week %> días por semana
              </div>
            </div>

            <div class="grid grid-cols-7 gap-2">
              <% %w[monday tuesday wednesday thursday friday saturday sunday].each do |day| %>
                <% day_name = {
                  'monday' => 'Lun',
                  'tuesday' => 'Mar',
                  'wednesday' => 'Mié',
                  'thursday' => 'Jue',
                  'friday' => 'Vie',
                  'saturday' => 'Sáb',
                  'sunday' => 'Dom'
                }[day] %>

                <div class="text-center p-2 rounded-lg <%= @user.effective_working_days[day] ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-400' %>">
                  <div class="text-xs font-medium"><%= day_name %></div>
                  <div class="mt-1">
                    <% if @user.effective_working_days[day] %>
                      <svg class="h-4 w-4 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    <% else %>
                      <svg class="h-4 w-4 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <% if @user.has_custom_working_days? %>
              <div class="mt-4 p-3 bg-blue-50 border border-blue-200 rounded-md">
                <p class="text-sm text-blue-800">
                  <strong>Horario personalizado:</strong> Este usuario tiene días laborales diferentes a los estándar del país.
                  Esto afecta el cálculo de días hábiles para solicitudes de <%= @user.vacation_term %>.
                </p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Balance de Vacaciones/Días de Descanso -->
        <% if @vacation_balance %>
          <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                Balance de <%= @user.vacation_term.capitalize %> - <%= Date.current.year %>
              </h3>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="bg-red-50 p-4 rounded-lg">
                  <dt class="text-sm font-medium text-gray-500">Días Usados</dt>
                  <dd class="text-3xl font-bold text-red-600"><%= @vacation_balance.used_days %></dd>
                  <p class="text-xs text-gray-500 mt-1">hasta la fecha</p>
                </div>
                <div class="bg-green-50 p-4 rounded-lg">
                  <dt class="text-sm font-medium text-gray-500">Días Disponibles</dt>
                  <dd class="text-3xl font-bold text-green-600"><%= @vacation_balance.days_available %></dd>
                  <p class="text-xs text-gray-500 mt-1">restantes</p>
                </div>
              </div>
              
              <!-- Barra de progreso -->
              <div class="mt-4">
                <div class="flex justify-between text-sm text-gray-600 mb-1">
                  <span>Uso de <%= @user.vacation_term %></span>
                  <span><%= (@vacation_balance.used_days.to_f / @vacation_balance.days_available * 100).round(1) %>%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-blue-600 h-2 rounded-full" 
                       style="width: <%= (@vacation_balance.used_days.to_f / @vacation_balance.days_available * 100).round(1) %>%"></div>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Historial de Solicitudes -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg leading-6 font-medium text-gray-900">
                Historial de Solicitudes
              </h3>
              <%= link_to "Ver todas", vacation_requests_path(user_id: @user.id),
                         class: "text-sm text-blue-600 hover:text-blue-800" %>
            </div>

            <% if @recent_requests.any? %>
              <div class="space-y-3">
                <% @recent_requests.each do |request| %>
                  <div class="border border-gray-200 rounded-lg p-4">
                    <div class="flex items-center justify-between">
                      <div>
                        <p class="text-sm font-medium text-gray-900">
                          <%= request.start_date.strftime("%d/%m/%Y") %> - <%= request.end_date.strftime("%d/%m/%Y") %>
                        </p>
                        <p class="text-sm text-gray-500">
                          <%= request.days_requested %> días • <%= request.reason %>
                        </p>
                      </div>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                 <%= case request.status
                                     when 'pending' then 'bg-yellow-100 text-yellow-800'
                                     when 'approved' then 'bg-green-100 text-green-800'
                                     when 'rejected' then 'bg-red-100 text-red-800'
                                     end %>">
                        <%= request.status.humanize %>
                      </span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-6">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
                <p class="mt-2 text-sm text-gray-500">
                  No hay solicitudes de <%= @user.vacation_term %> registradas
                </p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Columna Lateral -->
      <div class="space-y-6">
        <!-- Acciones Rápidas -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
              Acciones Rápidas
            </h3>
            <div class="space-y-3">
              <%= link_to "Crear Solicitud de #{@user.vacation_term.capitalize}",
                         new_vacation_request_path(user_id: @user.id),
                         class: "w-full flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>

              <% if @user.can_approve_requests? && @subordinates&.any? %>
                <%= link_to "Ver Equipo (#{@subordinates.count})",
                           users_path(lead_id: @user.id),
                           class: "w-full flex items-center justify-center px-4 py-2 border border-blue-300 text-sm font-medium rounded-md text-blue-700 bg-blue-50 hover:bg-blue-100" %>
              <% end %>

              <%= link_to "Historial Completo",
                         vacation_requests_path(user_id: @user.id),
                         class: "w-full flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
            </div>
          </div>
              <% if current_user.hr? || current_user.admin? %>
                <% if @vacation_balance %>
                  <%= link_to "Gestionar Balance",
                             edit_vacation_balance_path(@vacation_balance),
                             class: "w-full flex items-center justify-center px-4 py-2 border border-teal-300 text-sm font-medium rounded-md text-teal-700 bg-teal-50 hover:bg-teal-100" %>
                <% else %>
                  <%= link_to "Crear Balance #{Date.current.year}",
                             new_vacation_balance_path(vacation_balance: { user_id: @user.id }),
                             class: "w-full flex items-center justify-center px-4 py-2 border border-green-300 text-sm font-medium rounded-md text-green-700 bg-green-50 hover:bg-green-100" %>
                <% end %>

                <%= link_to "Ver Todos los Balances",
                           vacation_balances_path(user_id: @user.id),
                           class: "w-full flex items-center justify-center px-4 py-2 border border-purple-300 text-sm font-medium rounded-md text-purple-700 bg-purple-50 hover:bg-purple-100" %>
              <% end %>

        </div>

        <!-- Equipo -->
        <% if @user.leader? && @subordinates&.any? %>
          <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                Equipo de Trabajo
              </h3>
              <div class="space-y-3">
                <% @subordinates.limit(5).each do |subordinate| %>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <div class="h-8 w-8 bg-gray-300 rounded-full flex items-center justify-center">
                        <span class="text-xs font-medium text-gray-700">
                          <%= subordinate.name.split.map(&:first).join.upcase %>
                        </span>
                      </div>
                      <div class="ml-3">
                        <%= link_to subordinate.name, subordinate, class: "text-sm font-medium text-gray-900 hover:text-blue-600" %>
                      </div>
                    </div>
                    <span class="text-xs text-gray-500">
                      <%= subordinate.available_days_for_year %> días
                    </span>
                  </div>
                <% end %>
                <% if @subordinates.count > 5 %>
                  <div class="text-center pt-2">
                    <%= link_to "Ver todos (#{@subordinates.count})",
                               users_path(lead_id: @user.id),
                               class: "text-sm text-blue-600 hover:text-blue-800" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Alertas -->
        <% if current_user.hr? %>
          <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                Alertas
              </h3>
              <div class="space-y-3">
                <% available_days = @user.available_days_for_year %>
                <% if available_days > 10 %>
                  <div class="bg-yellow-50 border border-yellow-200 rounded-md p-3">
                    <div class="flex">
                      <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                      </svg>
                      <div class="ml-3">
                        <p class="text-sm text-yellow-800">
                          Alto saldo de <%= @user.vacation_term %> acumuladas
                        </p>
                      </div>
                    </div>
                  </div>
                <% end %>

                <% if @user.vacation_requests.pending.any? %>
                  <div class="bg-blue-50 border border-blue-200 rounded-md p-3">
                    <div class="flex">
                      <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                      </svg>
                      <div class="ml-3">
                        <p class="text-sm text-blue-800">
                          Tiene solicitudes pendientes de aprobación
                        </p>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
