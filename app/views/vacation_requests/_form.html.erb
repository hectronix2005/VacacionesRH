<%= form_with model: vacation_request, local: true, class: "px-6 py-5" do |form| %>
  <% if vacation_request.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            Se encontraron <%= pluralize(vacation_request.errors.count, "error") %>:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% vacation_request.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <!-- Date Selection -->
    <div data-controller="date-calculator" class="grid grid-cols-2 gap-y-10 gap-x-4 sm:grid-cols-2">
      <div>
        <%= form.label :start_date, "Fecha de Inicio", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.date_field :start_date,
                              min: form.object.start_date || Date.current + 1.day,
                              max: Date.current + 3.months,
                              class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md",
                              data: {
                                date_calculator_target: "startDate",
                                action: "change->date-calculator#calculateDays"
                              } %>
        </div>
        <p class="mt-2 text-sm text-gray-500">
          Debe ser una fecha futura
        </p>
      </div>

      <div>
        <%= form.label :end_date, "Fecha de Fin", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.date_field :end_date,
                              min: Date.current + 1.day,
                              max: Date.current + 6.months,
                              class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md",
                              data: {
                                date_calculator_target: "endDate",
                                action: "change->date-calculator#calculateDays"
                              } %>
        </div>
        <p class="mt-2 text-sm text-gray-500">
          Debe ser posterior a la fecha de inicio
        </p>
      </div>

      <% if current_user.hr? || current_user.admin? %>
        <div>
          <%= form.label :status, "Estado", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.select :status,
                            VacationRequest.statuses.keys.map { |s| [s.humanize, s] },
                            {},
                            class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>
      <% end %>


      <!-- Days Calculation Display -->
      <div class="bg-blue-50 rounded-lg p-4 col-span-2"
           data-date-calculator-target="calculation"
           style="display: none;">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800">
              Días calculados
            </h3>
            <div class="mt-2 text-sm text-blue-700">
              <p data-date-calculator-target="text">Se calcularán automáticamente al seleccionar fechas</p>
              <p class="mt-1 text-xs text-blue-600" data-date-calculator-target="workingDaysInfo">
                <strong>Nota:</strong> Solo se cuentan días laborales. Los días no laborales no se incluyen en el cálculo.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Approval Process Info -->
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">
            Proceso de Aprobación
          </h3>
          <div class="mt-2 text-sm text-yellow-700">
            <p>Tu solicitud necesitará ser aprobada por:</p>
            <ul class="list-disc list-inside mt-1 space-y-1">
              <li><strong>Tu líder:</strong> <%= current_user.lead&.full_name || "No asignado" %></li>
              <li><strong>Recursos Humanos:</strong> Para la aprobación final</li>
            </ul>
            <p class="mt-2">Una vez aprobada por ambos niveles, podrás tomar tus <%= current_user.vacation_term %>.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Submit Buttons -->
    <div class="flex justify-end space-x-3">
      <%= link_to "Cancelar", vacation_request.persisted? ? vacation_request_path(vacation_request) : vacation_requests_path,
                  class: "py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form.submit "Guardar solicitud",
                      class: "py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>
<% end %>