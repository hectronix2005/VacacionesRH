<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-4">
          <li>
            <%= link_to "Dashboard", root_path,
                        class: "text-gray-400 hover:text-gray-500" %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <%= link_to "Mis Solicitudes", vacation_requests_path,
                          class: "ml-4 text-gray-400 hover:text-gray-500" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="ml-4 text-sm font-medium text-gray-500">Historial</span>
            </div>
          </li>
        </ol>
      </nav>

      <div class="mt-4 flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            Historial de <%= current_user.vacation_term.titleize %>
          </h1>
          <p class="mt-1 text-sm text-gray-600">
            Revisa el historial completo de tus solicitudes procesadas
          </p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Nueva Solicitud", new_vacation_request_path,
                      class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= link_to "Todas las Solicitudes", vacation_requests_path,
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    </div>

    <!-- Filter Tabs -->
    <div class="mb-6">
      <div class="border-b border-gray-200">
        <nav class="-mb-px flex space-x-8">
          <%= link_to "Todas", history_vacation_requests_path,
                      class: "#{params[:filter].blank? ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm" %>
          <%= link_to "Aprobadas", history_vacation_requests_path(filter: 'approved'),
                      class: "#{params[:filter] == 'approved' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm" %>
          <%= link_to "Rechazadas", history_vacation_requests_path(filter: 'rejected'),
                      class: "#{params[:filter] == 'rejected' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm" %>
          <%= link_to "Tomadas", history_vacation_requests_path(filter: 'taken'),
                      class: "#{params[:filter] == 'taken' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm" %>
        </nav>
      </div>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Solicitudes aprobadas</dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @history_requests.approved.count %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-red-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Solicitudes rechazadas</dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @history_requests.rejected.count %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-indigo-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Solicitudes ya tomadas</dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @history_requests.taken.count %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total de Días tomados</dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @history_requests.select { |r| r.taken? }.sum(&:days_requested) %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- History Timeline -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Historial de Solicitudes
            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              <%= @history_requests.count %>
            </span>
          </h3>
          <div class="flex items-center space-x-2">
            <span class="text-sm text-gray-500">Ordenar por:</span>
            <select class="border-gray-300 rounded-md text-sm" onchange="window.location.href=this.value">
              <option value="<%= history_vacation_requests_path(sort: 'desc') %>" <%= "selected" if params[:sort] == 'desc'%>>Más reciente</option>
              <option value="<%= history_vacation_requests_path(sort: 'asc') %>" <%= "selected" if params[:sort] == 'asc'%>>Más antigua</option>
            </select>
          </div>
        </div>

        <% if @history_requests.any? %>
          <div class="flow-root">
            <ul class="-mb-8">
              <% @history_requests.each_with_index do |request, index| %>
                <li>
                  <div class="relative pb-8">
                    <% unless index == @history_requests.count - 1 %>
                      <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                    <% end %>
                    
                    <div class="relative flex space-x-3">
                      <div>
                        <% case request.status %>
                        <% when 'fully_approved' %>
                          <span class="h-8 w-8 rounded-full bg-green-500 flex items-center justify-center ring-8 ring-white">
                            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                          </span>
                        <% when 'rejected' %>
                          <span class="h-8 w-8 rounded-full bg-red-500 flex items-center justify-center ring-8 ring-white">
                            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                            </svg>
                          </span>
                        <% when 'taken' %>
                          <span class="h-8 w-8 rounded-full bg-indigo-500 flex items-center justify-center ring-8 ring-white">
                            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                          </span>
                        <% end %>
                      </div>
                      
                      <div class="min-w-0 flex-1">
                        <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow">
                          <!-- Request Header -->
                          <div class="flex items-center justify-between mb-3">
                            <div class="flex items-center space-x-3">
                              <h4 class="text-sm font-medium text-gray-900">
                                <%= request.start_date.strftime("%d/%m/%Y") %> - <%= request.end_date.strftime("%d/%m/%Y") %>
                              </h4>
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                <%= request.days_requested %> días
                              </span>
                              
                              <!-- Status Badge -->
                              <% case request.status %>
                              <% when 'fully_approved' %>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                  Aprobada
                                </span>
                              <% when 'rejected' %>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                  Rechazada
                                </span>
                              <% when 'taken' %>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                  Tomada
                                </span>
                              <% end %>
                            </div>
                            
                            <div class="flex items-center space-x-2">
                              <%= link_to "Ver Detalles", vacation_request_path(request), 
                                          class: "text-blue-600 hover:text-blue-900 text-sm font-medium" %>
                            </div>
                          </div>
                          
                          <!-- Request Details -->
                          <div class="space-y-2">
                            
                            <div class="flex items-center justify-between text-sm text-gray-500">
                              <span>
                                Solicitado: <%= request.created_at.strftime("%d/%m/%Y %H:%M") %>
                              </span>
                              
                              <% if request.approved_at.present? %>
                                <span>
                                  Procesado: <%= request.approved_at.strftime("%d/%m/%Y %H:%M") %>
                                </span>
                              <% end %>
                            </div>
                            
                            <!-- Rejection Reason -->
                            <% if request.rejected? && request.rejected_reason.present? %>
                              <div class="mt-3 p-3 bg-red-50 border border-red-200 rounded-md">
                                <div class="flex">
                                  <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                    </svg>
                                  </div>
                                  <div class="ml-3">
                                    <h3 class="text-sm font-medium text-red-800">Motivo del rechazo</h3>
                                    <div class="mt-2 text-sm text-red-700">
                                      <p><%= request.rejected_reason %></p>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            <% end %>
                            
                            <!-- Approval History -->
                            <% if request.vacation_approvals.any? %>
                              <div class="mt-3 pt-3 border-t border-gray-100">
                                <span class="text-sm font-medium text-gray-500">Aprobaciones:</span>
                                <div class="mt-1 space-y-1">
                                  <% request.vacation_approvals.order(:approved_at).each do |approval| %>
                                    <div class="flex items-center text-xs text-gray-600">
                                      <svg class="w-3 h-3 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                      </svg>
                                      <%= approval.role_display_name %>: <%= approval.user.full_name %>
                                      (<%= approval.approved_at %>)
                                      <% if approval.comments.present? %>
                                        <span class="ml-2 text-gray-500">- <%= approval.comments %></span>
                                      <% end %>
                                    </div>
                                  <% end %>
                                </div>
                              </div>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
          
          <!-- Pagination -->
          <% if @pagy.pages > 1 %>
            <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
              <div class="flex-1 flex justify-between sm:hidden">
                <!-- Mobile pagination -->
                <% if @pagy.prev %>
                  <%= link_to "Anterior", pagy_url_for(@pagy, @pagy.prev), 
                              class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                <% else %>
                  <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-300 bg-gray-100 cursor-not-allowed">Anterior</span>
                <% end %>
                <% if @pagy.next %>
                  <%= link_to "Siguiente", pagy_url_for(@pagy, @pagy.next), 
                              class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                <% else %>
                  <span class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-300 bg-gray-100 cursor-not-allowed">Siguiente</span>
                <% end %>
              </div>
              <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                  <p class="text-sm text-gray-700">
                    Mostrando
                    <span class="font-medium"><%= @pagy.from %></span>
                    a
                    <span class="font-medium"><%= @pagy.to %></span>
                    de
                    <span class="font-medium"><%= @pagy.count %></span>
                    solicitudes del historial
                  </p>
                </div>
                <div>
                  <%== pagy_nav(@pagy) %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <!-- Empty State -->
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 48 48">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No hay historial</h3>
            <p class="mt-1 text-sm text-gray-500">
              No tienes solicitudes procesadas
              <% case params[:filter] %>
              <% when 'approved' %>
                aprobadas
              <% when 'rejected' %>
                rechazadas
              <% when 'taken' %>
                tomadas
              <% else %>
                en tu historial
              <% end %>
              aún.
            </p>
            <div class="mt-6">
              <%= link_to "Nueva Solicitud", new_vacation_request_path,
                          class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
